<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mxmh.crystallization.acyivity.StartUpFlushActivity">

    <ImageView
        android:id="@+id/iv_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/lovely1" />

    <ImageView
        android:id="@+id/iv_set"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_action_gear" />

    <ImageView
        android:id="@+id/iv_music_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_action_play_next" />

    <ImageView
        android:id="@+id/iv_music_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/iv_music_next"
        android:layout_toLeftOf="@+id/iv_music_next"
        android:src="@drawable/ic_action_play_pause" />

    <ImageView
        android:id="@+id/iv_music_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/iv_music_pause"
        android:layout_toLeftOf="@+id/iv_music_pause"
        android:src="@drawable/ic_action_play_prev" />

    <!--<ImageView-->
    <!--android:id="@+id/iv_ren_move"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"/>-->


</RelativeLayout>
